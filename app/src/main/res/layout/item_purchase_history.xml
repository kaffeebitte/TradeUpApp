<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/m3_card_background"
    android:elevation="2dp"
    android:orientation="horizontal"
    android:padding="12dp">

    <!-- Item Image -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_item_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/rounded_image"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_image_placeholder" />

    <!-- Item Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Title and Price Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/md_theme_onSurface"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Gaming Chair RGB" />

            <TextView
                android:id="@+id/tv_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/md_theme_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="â‚«800,000" />

        </LinearLayout>

        <!-- Purchase Date -->
        <TextView
            android:id="@+id/tv_purchase_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:textSize="12sp"
            tools:text="Purchased on 15 Dec 2024" />

        <!-- Delivery Address -->
        <TextView
            android:id="@+id/tv_item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:textSize="12sp"
            tools:text="123 Main St, District 1, HCMC" />

        <!-- Status -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/m3_chip_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:textColor="@color/md_theme_onSecondaryContainer"
            android:textSize="11sp"
            android:textStyle="bold"
            tools:text="DELIVERED" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_view_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/md_theme_surfaceVariant"
                android:gravity="center"
                android:paddingVertical="6dp"
                android:text="View Detail"
                android:textColor="@color/md_theme_primary"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_review"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/md_theme_primary"
                android:gravity="center"
                android:paddingVertical="6dp"
                android:text="Write Review"
                android:textColor="@color/md_theme_onPrimary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:enabled="true" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

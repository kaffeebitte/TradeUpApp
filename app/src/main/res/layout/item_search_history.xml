<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="12dp"
    android:paddingHorizontal="16dp"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_history_24"
        android:contentDescription="Search history icon"
        android:tint="?attr/colorOnSurfaceVariant"
        android:layout_marginEnd="12dp"/>

    <TextView
        android:id="@+id/tv_search_query"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Search query"
        android:textAppearance="?attr/textAppearanceBodyLarge"
        android:textColor="?attr/colorOnSurface"/>

    <ImageView
        android:id="@+id/btn_delete_history"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_close_24"
        android:contentDescription="Delete history"
        android:tint="?attr/colorOnSurfaceVariant"
        android:padding="4dp"/>
</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_purchase_offer_history"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/md_theme_surface"
        android:contentDescription="History tabs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorAnimationDuration="300"
        app:tabIndicatorColor="@color/md_theme_primary"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorGravity="bottom"
        app:tabIndicatorHeight="2dp"
        app:tabPaddingBottom="0dp"
        app:tabPaddingEnd="16dp"
        app:tabPaddingStart="16dp"
        app:tabPaddingTop="0dp"
        app:tabRippleColor="@color/md_theme_primaryContainer"
        app:tabSelectedTextColor="@color/md_theme_primary"
        app:tabTextColor="@android:color/darker_gray" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_purchase_offer_history"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tab_layout_purchase_offer_history"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

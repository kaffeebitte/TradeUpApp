<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:background="@color/md_theme_surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="top"
            android:background="@drawable/bg_image_round"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_image_placeholder" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="4dp">

            <TextView
                android:id="@+id/tv_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Title"
                android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/md_theme_onSurface" />

            <TextView
                android:id="@+id/tv_reviewee_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="@color/md_theme_onSurfaceVariant"
                android:paddingTop="2dp" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginBottom="2dp"
                android:numStars="5"
                android:paddingTop="2dp"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:stepSize="1.0"
                android:theme="@style/Widget.AppCompat.RatingBar"
                android:layout_gravity="start" />

            <TextView
                android:id="@+id/et_review_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_comment_box"
                android:gravity="top|start"
                android:maxLines="4"
                android:minLines="1"
                android:padding="10dp"
                android:text="Review comment goes here."
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/md_theme_onSurface" />

            <Button
                android:id="@+id/btn_report_review"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report"
                android:layout_gravity="end"
                android:textColor="@color/md_theme_error"
                android:layout_marginTop="2dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

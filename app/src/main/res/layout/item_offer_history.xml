<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@drawable/bg_card"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Product Name -->
    <TextView
        android:id="@+id/tv_offer_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="Product Name"
        android:textColor="@color/md_theme_primary"
        android:textSize="17sp"
        android:textStyle="bold" />

    <!-- Product Price -->
    <TextView
        android:id="@+id/tv_offer_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:text="Original Price: 0 đ"
        android:textColor="@color/md_theme_onSurfaceVariant"
        android:textSize="14sp" />

    <!-- Product Image -->
    <ImageView
        android:id="@+id/iv_offer_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_image_placeholder"
        android:visibility="gone" />

    <!-- Offer Price -->
    <TextView
        android:id="@+id/tv_offer_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:text="Offer Price: 0 đ"
        android:textColor="@color/md_theme_secondary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Offer Message -->
    <TextView
        android:id="@+id/tv_offer_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:text="Message"
        android:textColor="@color/md_theme_onSurface"
        android:textSize="14sp" />

    <!-- Status -->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:text="Status: pending"
        android:textColor="@color/md_theme_primary"
        android:textSize="13sp" />

    <!-- Created At -->
    <TextView
        android:id="@+id/tv_created_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:text="Created: 2025-07-03 07:30"
        android:textColor="@color/md_theme_onSurfaceVariant"
        android:textSize="12sp" />

    <!-- Counter Offer -->
    <TextView
        android:id="@+id/tv_counter_offer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:text="Counter Offer: "
        android:textColor="@color/md_theme_tertiary"
        android:textSize="12sp"
        android:visibility="gone" />

    <!-- Responded At -->
    <TextView
        android:id="@+id/tv_responded_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:text="Responded: 2025-07-03 09:00"
        android:textColor="@color/md_theme_onSurfaceVariant"
        android:textSize="12sp"
        android:visibility="gone" />

</LinearLayout>

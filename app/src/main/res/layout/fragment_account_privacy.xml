<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="?attr/colorSurface">

    <TextView
        android:id="@+id/tv_account_privacy_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Privacy &amp; Security"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can deactivate your account or permanently delete it. Deactivation is reversible, but deletion is permanent."
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btn_deactivate_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deactivate Account"
        android:backgroundTint="@color/md_theme_primaryContainer"
        android:textColor="@color/md_theme_onPrimaryContainer"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_delete_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Account Permanently"
        android:backgroundTint="@color/md_theme_errorContainer"
        android:textColor="@color/md_theme_onErrorContainer" />

</LinearLayout>
